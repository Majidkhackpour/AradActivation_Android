<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserMainToolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserMainName"
            android:layout_margin="5dp"
            android:hint="نام و نام خانوادگی"
            android:gravity="right"/>
        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserMain_UserName"
            android:layout_margin="5dp"
            android:hint="نام کاربری"
            android:gravity="right"/>
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserMainPass"
            android:layout_margin="5dp"
            android:gravity="right"
            android:hint="رمز عبور"/>
        <EditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserMainMobile"
            android:layout_margin="5dp"
            android:gravity="right"
            android:hint="شماره تماس"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserMainEmail"
            android:layout_margin="5dp"
            android:gravity="right"
            android:hint="پست الکترونیک"/>
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="right"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="ویزیتور"
                android:id="@+id/rbtnVisitor"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="right"
                android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                android:button="@null"
                android:layout_margin="5dp"/>
            <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="true"
              android:text="اپراتور"
              android:id="@+id/rbtnOperator"
              android:layoutDirection="rtl"
              android:textAlignment="textStart"
              android:layout_gravity="right"
              android:drawableRight="?android:attr/listChoiceIndicatorSingle"
              android:button="@null"
              android:layout_margin="5dp"/>
            <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="true"
              android:text="مدیر"
              android:id="@+id/rbtnManager"
              android:layoutDirection="rtl"
              android:textAlignment="textStart"
              android:layout_gravity="right"
              android:drawableRight="?android:attr/listChoiceIndicatorSingle"
              android:button="@null"
              android:layout_margin="5dp"/>
        </RadioGroup>
        
    </LinearLayout>
</LinearLayout>
