<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#dcdcdc">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myToolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myDrawer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/orderLayout">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/orders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/p124"
                    android:layout_alignParentRight="true"
                    app:civ_border_width="3dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="#3498db"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2.0dp">
                <TextView
                    android:id="@+id/lblOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مدیریت قراردادها"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/productLayout">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/p109"
                    android:layout_alignParentRight="true"
                    app:civ_border_width="3dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="#3498db"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2.0dp">
                <TextView
                    android:id="@+id/lblProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مدیریت کالاها"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/cusLayout">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/customers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar"
                    android:layout_alignParentRight="true"
                    app:civ_border_width="3dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="#3498db"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2.0dp">
                <TextView
                    android:id="@+id/lblCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مدیریت مشتریان"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="250dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/pardakhtLayout">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pardakht"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/a078"
                    android:layout_alignParentRight="true"
                    app:civ_border_width="3dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="#3498db"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2.0dp">
                <TextView
                    android:id="@+id/lblPardakht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مدیریت پرداخت ها"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/daryaftLayout">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/reception"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/a077"
                    android:layout_alignParentRight="true"
                    app:civ_border_width="3dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="#3498db"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2.0dp">
                <TextView
                    android:id="@+id/lblReception"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مدیریت دریافت ها"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </RelativeLayout>

      <ListView
        android:id="@+id/MyListView"
        android:layout_height="match_parent"
        android:layout_width="240dp"
        android:choiceMode="singleChoice"
        android:divider="#818181"
        android:dividerHeight="1dp"
        android:background="#e5ffff"
        android:layout_gravity="start" />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>