<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PardakhtMainToolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                    <TextView
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblPardakhtMainDateSh"
                        android:layout_margin="2dp"
                        android:gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:text="تاریخ ثبت:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PardakhtMainDateShText"
                        android:gravity="right"
                        android:layout_margin="2dp" />
                </LinearLayout>
            </LinearLayout>
            <AutoCompleteTextView
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainCustomerName"
                android:layout_margin="5dp"
                android:hint="طرف حساب"
                android:gravity="right"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="پرداخت نقدی"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PardakhtMainNaqdText"
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainNaqdPrice"
                android:layout_margin="5dp"
                android:gravity="right"
                android:textAlignment="center"
                android:hint="مبلغ "/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cmbPardakhtMainNaqd"
                android:layoutDirection="rtl"
                android:textDirection="rtl"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="پرداخت حواله بانکی"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PardakhtMainBankText"
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainBankPrice"
                android:layout_margin="5dp"
                android:gravity="right"
                android:textAlignment="center"
                android:hint="مبلغ "/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cmbPardakhtMainBank"
                android:layoutDirection="rtl"
                android:textDirection="rtl"/>
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainBankFishNo"
                android:layout_margin="5dp"
                android:gravity="right"
                android:textAlignment="center"
                android:hint="شماره فیش"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="پرداخت چک"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PardakhtMainCheckText"
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainCheckPrice"
                android:layout_margin="5dp"
                android:gravity="right"
                android:textAlignment="center"
                android:hint="مبلغ "/>
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainChechNo"
                android:layout_margin="5dp"
                android:gravity="right"
                android:textAlignment="center"
                android:hint="شماره چک "/>
            <AutoCompleteTextView
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPardakhtMainBankName"
                android:layout_margin="5dp"
                android:hint="بانک صادرکننده چک"
                android:gravity="right"
                android:textAlignment="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                    <EditText
                        android:inputType="number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/txtPardakhtMainYear"
                        android:layout_margin="5dp"
                        android:gravity="right"
                        android:textAlignment="center"
                        android:hint="سال "/>
                    <EditText
                        android:inputType="number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/txtPardakhtMainMounth"
                        android:layout_margin="5dp"
                        android:gravity="right"
                        android:textAlignment="center"
                        android:hint="ماه "/>
                    <EditText
                        android:inputType="number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/txtPardakhtMainDay"
                        android:layout_margin="5dp"
                        android:gravity="right"
                        android:textAlignment="center"
                        android:hint="روز "/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:text="تاریخ سررسید:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/_PardakhtMainDateShText"
                        android:gravity="right"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
